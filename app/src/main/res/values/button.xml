<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ParentButton" parent="android:Widget.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LoginButton" parent="ParentButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/roundshape_login_btn_released</item>
        <item name="android:alpha">1</item>
        <item name="android:layout_marginStart">42dp</item>
        <item name="android:layout_marginEnd">42dp</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="loginSettingButton" parent="ParentButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">8dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:alpha">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="editButton" parent="ParentButton">

        <item name="android:adjustViewBounds">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:alpha">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>