<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:itemBackground">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorSecondary</item>
        <item name="colorControlNormal">@color/colorPrimary</item>   <!-- normal border color change as you wish -->
        <item name="colorControlActivated">@color/colorSecondary</item> <!-- activated color change as you wish -->
    </style>

    <style name="DarkerTheme" parent="AppTheme">
        <!-- Override colors -->

        <!-- Customize your colors  -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorDark</item>
        <item name="colorAccent">@color/colorAccent</item>
     </style>

    <style name="NoTitleDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
